pipeline {
    agent { label 'codeclarity' }

    environment {
        DOCKERHUB_CREDENTIALS=credentials('dockerhub')
    }
    stages {
        stage('Login') {
			steps {
				sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
			}
		}
        stage('Reset') {
            steps {
                sh 'docker system prune -af'
                sh 'git submodule update --init --recursive'
                sh 'git fetch --tags --force'
                sh 'whoami'
                sh 'source ~/.bashrc'
                sh 'npm install -g corepack'
                sh 'corepack enable'
                sh 'yarn'
            }
        }
        stage('Test lint and format') {
            steps {
                sh 'yarn lint'
                sh 'yarn run prettier src --check'
            }
        }
        stage('Build') {
            steps {
                sh 'docker buildx rm frontend || true'
                sh 'docker buildx create --name frontend --use --bootstrap'
                sh 'docker buildx build -f .cloud/docker/Dockerfile --platform linux/amd64,linux/arm64 --tag codeclarityce/frontend:latest --tag $Tag .'
            }
        }
        stage('Deploy') {
            when {
                branch 'main'
            }
            steps {
                script {
                    def project =readJSON file: 'package.json'
                    env.Version = project.version
                    env.Name = project.name
                    sh 'echo $Version'
                    env.Tag = "codeclarityce/${Name}:${Version}"
                    sh 'echo $Tag'
                    sh "sh .cloud/jenkins/check_version.sh ${Version}"
                }
                sh 'docker buildx build -f .cloud/docker/Dockerfile --platform linux/amd64,linux/arm64 --tag codeclarityce/frontend:latest --tag $Tag --push .'
            }
        }
    }
}